# Azure Authentication (Service Principal with Certificate)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CERTIFICATE_PATH=/path/to/certificate.pem
AZURE_CERTIFICATE_PASSWORD=optional-password

# Or use Managed Identity (for Azure-hosted deployments)
USE_MANAGED_IDENTITY=false

# Subscription Configuration
AZURE_SUBSCRIPTION_IDS=sub-id-1,sub-id-2,sub-id-3

# CSP Configuration (optional)
CSP_TENANT_IDS=tenant-id-1,tenant-id-2

# Tool Configuration
ANOMALY_THRESHOLD=1.5
CACHE_TTL_SECONDS=300
MAX_RETRIES=3
